{
  "compilerOptions": {
    "allowJs": true,
    "lib": ["deno.window"],
    "strict": true
  },
  "importMap": {
    "imports": {
      "std/": "https://deno.land/std@0.168.0/",
      "@supabase/supabase-js": "https://esm.sh/@supabase/supabase-js@2"
    }
  },
  "tasks": {
    "start": "deno run --allow-net --allow-env index.ts"
  },
  "lint": {
    "files": {
      "include": ["supabase/functions/**/*.ts"]
    },
    "rules": {
      "tags": ["recommended"]
    }
  },
  "fmt": {
    "files": {
      "include": ["supabase/functions/**/*.ts"]
    },
    "options": {
      "useTabs": false,
      "lineWidth": 100,
      "indentWidth": 2,
      "singleQuote": true,
      "proseWrap": "preserve"
    }
  }
} 